@model FormModel

@{
    ViewData["Title"] = "Form Details";
}

<h2>Form Details</h2>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Created At: @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
</div>

<form>
    @foreach (var field in Model.Fields)
    {
        <div class="form-group">
            <label for="@field.Name">@field.Name</label>
            @if (field.DataType == "STRING")
            {
                <input type="text" class="form-control" id="@field.Name" name="@field.Name" @(field.Required ? "required" : "")>
            }
            else if (field.DataType == "NUMBER")
            {
                <input type="number" class="form-control" id="@field.Name" name="@field.Name" @(field.Required ? "required" : "")>
            }
        </div>
    }
    <button type="submit" class="btn btn-success">Submit</button>
</form>
